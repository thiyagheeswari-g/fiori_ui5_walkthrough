<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="helloDialog"
        title="Helloooo {/recipient/name}">
        <content>
            <core:Icon
                src="sap-icon://touch"
                size="4rem"
                class="sapUiSmallMargin"
            />
        </content>
        <beginButton>
            <Button
            text="{i18n>closeButtonText}"
            press=".onCloseDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>